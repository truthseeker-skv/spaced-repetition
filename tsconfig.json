{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "jsx": "react",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "preserveConstEnums": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "ES5",
    "tsBuildInfoFile": "lib/.tsbuildinfo",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": ["./*.ts", "./**/*.ts", "./*.tsx", "./**/*.tsx"],
}
